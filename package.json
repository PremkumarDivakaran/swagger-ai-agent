{
  "name": "swagger-ai-agent",
  "version": "1.0.0",
  "description": "Enterprise-grade Swagger AI Agent - API-first using Node.js + TypeScript + Express",
  "main": "dist/src/core/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/core/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/core/server.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "stop:backend": "lsof -ti :3001 | xargs kill -9 2>/dev/null || true",
    "stop:frontend": "lsof -ti :5174 | xargs kill -9 2>/dev/null || true",
    "stop:app": "npm run stop:backend && npm run stop:frontend",
    "start:backend": "npm run dev &",
    "start:frontend": "cd web-app && npm run dev &",
    "start:app": "npm run stop:app && sleep 1 && npm run start:backend && sleep 2 && npm run start:frontend",
    "restart:app": "npm run stop:app && sleep 1 && npm run start:backend && sleep 2 && npm run start:frontend",
    "build:frontend": "cd web-app && npm run build",
    "build:all": "npm run build && npm run build:frontend"
  },
  "keywords": [
    "swagger",
    "openapi",
    "api-testing",
    "mcp",
    "axios",
    "jest",
    "test-generation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.10.0",
    "@apidevtools/swagger-parser": "^10.1.0",
    "@faker-js/faker": "^10.3.0",
    "@types/joi": "^17.2.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.3.1",
    "groq-sdk": "^0.7.0",
    "joi": "^18.0.2",
    "ollama": "^0.5.0",
    "openai": "^4.24.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
