# Production Environment Variables

NODE_ENV=production
PORT=3001

# Logging (error | warn | info | debug)
LOG_LEVEL=info

# Swagger Configuration
SWAGGER_UPLOAD_MAX_SIZE=10mb
SWAGGER_CACHE_TTL=3600

# Execution Configuration
EXECUTION_TIMEOUT=30000
EXECUTION_MAX_RETRIES=3

# ──────────────────────────────────────────────
# LLM Configuration
# ──────────────────────────────────────────────
# Supported providers: custom | groq | openai
# Set ONE provider — all LLM calls go through it
LLM_ENABLED=true
LLM_PROVIDER=groq

# Custom (GPT-based custom API)
CUSTOM_API_KEY=
CUSTOM_MODEL=gpt-4o-mini

# Groq
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# GitHub (required for Push to GitHub / PR creation)
# GITHUB_TOKEN=ghp_your_personal_access_token_here
